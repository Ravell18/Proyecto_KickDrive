@page
@model EnergyUI.Pages.Containers.Index2Model
@{
    ViewData["Title"] = "Index2";
}

<h1 class="text-info">Reportar Rutas</h1>
<form class="mt-3" method="post">
</form>
<form  method="post">
    <div class="form-group">
        <label for="inputAddress">Nombre del conductor</label>
        <input type="text" asp-for="@Model.Reporte.DriverName" class="form-control" id="inputAddress" placeholder="Nombre">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email"  asp-for="@Model.Reporte.Email" class="form-control" id="inputEmail4" placeholder="Email">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Ruta</label>
            <input type="text" asp-for="@Model.Reporte.Ruta" class="form-control" id="inputPassword4" placeholder="Ruta">
        </div>
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Mensaje</label>
        <input type="text" asp-for="@Model.Reporte.Message"class="form-control" id="inputRuta" placeholder="Mensaje" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>


@page
@model EnergyUI.Pages.Containers.EditVehiclesModel
@{
    ViewData["Title"] = "EditVehicles";
}


<h1>Editar Vehiculos</h1>
<form class="mt-3" method="post">
    <div class="d-flex justify-content-end p-2">
        <button type="submit" class="btn btn-primary m-2">Update</button>
        <a asp-page="/Containers/CVehiculos" class="btn btn-secondary m-2">Cancel</a>
    </div>
    <input readonly asp-for="@Model.Vehicle.Id" />
</form>
<div class="form-group">
    <label>Nombre del propietario</label>
    <input class="form-control form-text" role="textbox" asp-for="Vehicle.NProp" />
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <label>Marca</label>
        <input type="text" class="form-control" asp-for="Vehicle.Brand" />
    </div>
    <div class="form-group col-md-6">
        <label>Numero de serie</label>
        <input type="text" class="form-control" asp-for="Vehicle.NSerie" />
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <label>Modelo</label>
        <input type="text" class="form-control" asp-for="Vehicle.Model" />
    </div>
    <div class="form-group col-md-4">
        <label>Tipo de servicio</label>
        <input type="text" class="form-control" asp-for="Vehicle.TipServ" />
    </div>
    <div class="form-group col-md-2">
        <label>Numero de motor</label>
        <input type="text" class="form-control" asp-for="Vehicle.NMotor" />
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <label>Tipo de combustible</label>
        <input type="text" class="form-control" asp-for="Vehicle.TComb" />
    </div>
    <div class="form-group col-md-4">
        <label>Documentos legales</label>
        <input type="text" class="form-control" asp-for="Vehicle.DocLeg" />
    </div>
    <div class="form-group col-md-2">
        <label>Tipo de llantas</label>
        <input type="text" class="form-control" asp-for="Vehicle.TipLlantas" />
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <label>Capacidad de personas</label>
        <input type="text" class="form-control" asp-for="Vehicle.CapPerson" />
    </div>
    <div class="form-group col-md-4">
        <label>Capacidad de toneladas</label>
        <input type="text" class="form-control" asp-for="Vehicle.CapTon" />
    </div>
    <div class="form-group col-md-2">
        <label>Placas</label>
        <input type="text" class="form-control" asp-for="Vehicle.Placas" />
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <label>Oficina expedidora</label>
        <input type="text" class="form-control" asp-for="Vehicle.OfExp" />
    </div>
    <div class="form-group col-md-4">
        <label>Numero de registro</label>
        <input type="text" class="form-control" asp-for="Vehicle.NRegist" />
    </div>
</div>
<div class="col-md-12">
    <label>Status</label>
    <select asp-for="Vehicle.Status" class="form-control">
        <option value="" disabled="" selected="">Selecciona Status</option>
        <option value="True">Activo</option>
        <option value="False">Inactivo</option>
    </select>
</div>

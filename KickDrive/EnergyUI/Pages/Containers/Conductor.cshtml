@page
@model EnergyUI.Pages.Containers.Index5Model
@{
    ViewData["Title"] = "Index5";
}


<h1 class="text-info">Expediente de conductores</h1>
<form class="mt-3" method="post">

</form>
<form method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="inputEmail4">Nombre del conductor</label>
            <input type="text" asp-for="@Model.Driver.DriverName" class="form-control form-text" role="textbox" />
        </div>
        <div class="form-group col-md-5">
            <label for="inputEmail4">INE</label>
            <input type="text" asp-for="@Model.Driver.INE" class="form-control form-text" role="textbox" />
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
            <input hidden asp-for="@Model.Driver.INE" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="inputEmail4">Licencia del conductor</label>
            <input type="text" asp-for="@Model.Driver.License" class="form-control form-text" role="textbox" />
            <input type="file" class="custom-file-input form-control" lang="es">
            <input hidden asp-for="@Model.Driver.License" />
        </div>
        <div class="form-group col-md-5">
            <label for="exampleFormControlFile2">NSS</label>
            <input type="text" asp-for="@Model.Driver.NSS" class="form-control form-text" role="textbox" />
            <input type="file" class="form-control-file" id="exampleFormControlFile2">
            <input hidden asp-for="@Model.Driver.NSS" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="exampleFormControlFile3">Fotografia de frente</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile3">
            <input hidden asp-for="@Model.Driver.FrontPhoto" />

        </div>
        <div class="form-group col-md-5">
            <label for="exampleFormControlFile4">Fotografia de perfil</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile4">
            <input hidden asp-for="@Model.Driver.ProfilePhoto" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

@section Scripts{
    <script>
 $(document).ready(function () {
 $('.custom-file-input').on("change", function () {
 var fileName = $(this).val().split("\\").pop();
 $(this).next('.custom-file-label').html(fileName);
 });
 });
    </script>
}
